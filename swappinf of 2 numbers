def swap_numbers(a, b):
    print("Before swapping:")
    print("a =", a)
    print("b =", b)
    
    # Swap the values
    a, b = b, a
    
    print("\nAfter swapping:")
    print("a =", a)
    print("b =", b)

# Example usage:
num1 = float(input("Enter the first number: "))
num2 = float(input("Enter the second number: "))

swap_numbers(num1, num2)
